{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "rootDir": "src",
    "strict": true
  },
  "ignoreDeprecations": "6.0",
  "include": ["src"]
}
